<section class='p-4 bg-secondary'>
	<h2 class='text-primary'>Productos</h2>
	{{#if productos}}
		<table class='table table-dark'>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Precio</th>
					<th>Foto</th>
				</tr>
			</thead>
			<tbody>
				{{#each productos}}
					<tr class='text-center'>
						<td class='align-middle'>{{this.title}}</td>
						<td class='align-middle'>{{this.price}}</td>
						<td class='align-middle'>
							<img src='{{this.thumbnail}}' alt='{{this.title}}' />
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		<h2 class='bg-light p-4 text-danger'>No se encontraron productos</h2>
	{{/if}}
	<div class='mt-3'>
		<a href='/'>
			<button class='btn btn-warning'>Agregar producto</button>
		</a>
	</div>
</section>