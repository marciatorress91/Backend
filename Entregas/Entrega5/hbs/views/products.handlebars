<section class='p-4 bg-secondary'>
	<h2 class='alert alert-dark text-center'>Productos</h2>
	{{#if productos}}
		<table class='table container'>
			<thead>
				<tr>
					<th scope="col">Nombre</th>
					<th scope="col">Precio</th>
					<th scope="col">Foto</th>
				</tr>
			</thead>
			<tbody>
				{{#each productos}}
					<tr>
						<td>{{this.title}}</td>
						<td>{{this.price}}</td>
						<td><img src='{{this.thumbnail}}' alt='{{this.title}}' style="max-width: 50px; heigth: auto" />
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		<h2 class='alert alert-info container'>No se encontraron productos</h2>
	{{/if}}
	<div class='mt-3'>
		<a href='/'>
			<button class='btn btn-info'>Agregar producto</button>
		</a>
	</div>
</section>